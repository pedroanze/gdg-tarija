---
import { Menu, X } from "lucide-astro";
---

<nav
  class="fixed top-0 left-0 right-0 z-50 bg-white/95 backdrop-blur-sm border-b border-gray-200 shadow-sm"
>
  <div class="max-w-6xl mx-auto px-6 py-4">
    <div class="flex justify-between items-center">
      <!-- Logo -->
      <div class="flex items-center">
        <a href="/" class="flex items-center space-x-3">
          <img
            src="https://res.cloudinary.com/dopkch3x9/image/upload/v1751986489/logoNavBarIO_bqqas2.svg"
            alt="Google I/O Extended Tarija 2025"
            class="h-10 w-auto"
          />
        </a>
      </div>

      <div class="hidden md:block">
        <a
          href="https://events.gdg.com.bo/io-tarija-2025"
          target="_blank"
          rel="noopener noreferrer"
          class="bg-azul-GDG hover:bg-blue-600 text-white px-6 py-2 rounded-full font-semibold shadow-lg hover:shadow-xl transform hover:scale-105 transition-all duration-300"
        >
          Inscríbete
        </a>
      </div>

      <!-- Botón hamburguesa móvil -->
      <div class="md:hidden">
        <button
          id="mobile-menu-button"
          class="p-2 rounded-lg hover:bg-gray-100 transition-colors duration-200"
        >
          <Menu id="menu-icon" class="h-6 w-6 text-gray-700" />
          <X id="close-icon" class="h-6 w-6 text-gray-700 hidden" />
        </button>
      </div>
    </div>

    <!-- Menú móvil expandido -->
    <div
      id="mobile-menu"
      class="hidden md:hidden mt-4 pb-4 border-t border-gray-200"
    >
      <div class="flex flex-col space-y-3 mt-4">
        <a
          href="https://events.gdg.com.bo/io-tarija-2025"
          target="_blank"
          rel="noopener noreferrer"
          class="bg-azul-GDG hover:bg-blue-600 text-white px-6 py-3 rounded-full font-semibold shadow-lg hover:shadow-xl transform hover:scale-105 transition-all duration-300 text-center mt-4"
        >
          Inscríbete
        </a>
      </div>
    </div>
  </div>
</nav>

<script>
  const mobileMenuButton = document.getElementById("mobile-menu-button");
  const mobileMenu = document.getElementById("mobile-menu");
  const menuIcon = document.getElementById("menu-icon");
  const closeIcon = document.getElementById("close-icon");

  let isMenuOpen = false;

  mobileMenuButton?.addEventListener("click", () => {
    isMenuOpen = !isMenuOpen;

    if (isMenuOpen) {
      mobileMenu?.classList.remove("hidden");
      menuIcon?.classList.add("hidden");
      closeIcon?.classList.remove("hidden");
    } else {
      mobileMenu?.classList.add("hidden");
      menuIcon?.classList.remove("hidden");
      closeIcon?.classList.add("hidden");
    }
  });

  // Cerrar el menú cuando se hace clic en un enlace
  const mobileLinks = document.querySelectorAll("#mobile-menu a");
  mobileLinks.forEach((link) => {
    link.addEventListener("click", () => {
      mobileMenu?.classList.add("hidden");
      menuIcon?.classList.remove("hidden");
      closeIcon?.classList.add("hidden");
      isMenuOpen = false;
    });
  });
</script>
