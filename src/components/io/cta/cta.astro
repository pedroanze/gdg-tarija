---
import { Calendar, MapPin, Users, ArrowRight } from "lucide-astro";
---

<div
  id="io"
  class="relative overflow-hidden bg-io-extended min-h-screen flex items-center"
>
  <!-- Degradado transparente solo en top -->
  <div
    class="absolute top-0 left-0 right-0 h-96 bg-gradient-to-b from-white/80 via-white/40 to-transparent"
  >
  </div>

  <div class="relative max-w-6xl mx-auto px-6 pt-20 pb-12 w-full">
    <div class="text-center space-y-8 animate-fade-up animate-duration-[1000ms] animate-ease-out">
      <!-- Logo de Google I/O -->
      <div class="flex justify-center mb-8 animate-fade-up animate-duration-[1200ms] animate-delay-[200ms]">
        <img
          src="https://res.cloudinary.com/dopkch3x9/image/upload/v1751729535/logo_google_IO_jcbvrf.svg"
          alt="Google I/O Extended Logo"
          class="h-48 w-auto"
        />
      </div>

      <!-- Título principal -->
      <div class="space-y-4 animate-fade-up animate-duration-[1200ms] animate-delay-[400ms]">
        <!-- Subtítulo llamativo -->
        <p
          class="text-xl md:text-2xl text-gray-600 max-w-3xl mx-auto font-medium"
        >
          Descubre las últimas innovaciones de Google y conecta con la comunidad
          tech más vibrante de Tarija
        </p>
      </div>

      <!-- Información del evento -->
      <div class="grid md:grid-cols-2 gap-4 max-w-2xl mx-auto mt-12 animate-fade-up animate-duration-[1200ms] animate-delay-[600ms]">
        <!-- Fecha -->
        <div
          class="flex items-center space-x-3 p-3 bg-white/70 backdrop-blur-sm rounded-lg border border-gray-200 shadow-sm hover:scale-105 transition-transform duration-300"
        >
          <div class="p-2 bg-azul-GDG/10 rounded-full">
            <Calendar class="h-5 w-5 text-azul-GDG" />
          </div>
          <div class="text-left">
            <p class="text-sm text-gray-500 font-medium">Fecha</p>
            <p class="text-lg font-semibold text-gray-900">
              Sabado 2 de agosto
            </p>
          </div>
        </div>

        <!-- Lugar -->
        <div
          class="flex items-center space-x-3 p-3 bg-white/70 backdrop-blur-sm rounded-lg border border-gray-200 shadow-sm hover:scale-105 transition-transform duration-300"
        >
          <div class="p-2 bg-verde-GDG/10 rounded-full">
            <MapPin class="h-5 w-5 text-verde-GDG" />
          </div>
          <div class="text-left">
            <p class="text-sm text-gray-500 font-medium">Lugar</p>
            <p class="text-lg font-semibold text-gray-900">
              UCB Campus Central
            </p>
          </div>
        </div>
      </div>

      <!-- Botón de inscripción -->
      <div class="flex justify-center items-center mt-12 animate-fade-up animate-duration-[1200ms] animate-delay-[800ms]">
        <a
          href="https://events.gdg.com.bo/io-tarija-2025"
          target="_blank"
          rel="noopener noreferrer"
          class="group inline-flex items-center space-x-2 bg-azul-GDG hover:bg-blue-600 text-white px-8 py-4 rounded-full font-semibold text-lg shadow-lg hover:shadow-xl transform hover:scale-105 transition-all duration-300"
        >
          <Users class="h-5 w-5" />
          <span>Inscríbete Ahora</span>
          <ArrowRight
            class="h-5 w-5 group-hover:translate-x-1 transition-transform"
          />
        </a>
      </div>
    </div>
  </div>

  <style>
    .bg-io-extended {
      background-image: url("https://res.cloudinary.com/dopkch3x9/image/upload/v1751730524/back-io_a9qnzw.svg");
      background-size: cover;
      background-position: center;
      background-repeat: no-repeat;
    }
  </style>
</div>

