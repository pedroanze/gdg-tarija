---
import { Image } from "astro:assets";
import Logo from "../../../assets/iwd2025/Women-Techmakers.svg";
import Logo2 from "../../../assets/iwd2025/WTM-Tarija.svg";
import MenuList from "./menuList.json";
---

<header
  class="bg-iwd-primary top-0 start-0 w-full fixed z-20"
>
  <nav class="flex flex-wrap justify-between items-center py-6 px-6 md:px-10">
    <div class="h-12 flex items-center">
      <Image class="w-36 md:hidden" src={Logo2} alt="logo" />
      <Image class="w-48 hidden md:flex lg:w-80" src={Logo} alt="logo2" />
    </div>
    <div
      id="menu-button"
      class="text-white text-4xl font-bold md:hidden cursor-pointer"
    >
      &equiv;
    </div>
    <div
      id="menu-open"
      class="items-center text-center w-full hidden md:flex md:w-auto animate-fade-down animate-duration-500"
    >
      <ul
        class="font-medium text-sm lg:text-lg text-white bg-iwd-primary flex flex-col pt-7 md:flex-row md:pt-0 gap-9 gap-x-5 lg:gap-x-9"
      >
        {
          MenuList.map((menu) => (
            <li>
              <a href={menu.href} class="hover:text-gray-200">
                {menu.title}
              </a>
            </li>
          ))
        }
      </ul>
    </div>
  </nav>
</header>

<script>
  const button = document.querySelector("#menu-button");
  const menuOpen = document.querySelector("#menu-open");
  button.addEventListener("click", () => {
    menuOpen.classList.toggle("hidden");
  });

  window.addEventListener("scroll", () => {
    if (!menuOpen.classList.contains("hidden")) {
      menuOpen.classList.add("hidden");
    }
  });
</script>
