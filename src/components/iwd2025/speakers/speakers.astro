---
import speakers from './speakers.json';
import BoliviaFlagIcon from 'assets/icons/BoliviaFlagIcon.svg';
import InstagramIcon from 'assets/icons/InstagramIcon.svg';
import TikTokIcon from 'assets/icons/TiktokIcon.svg';
import LinkedInIcon from 'assets/icons/LinkedInIcon.svg';
import IwdSpeakersBg from 'assets/iwd2025/iwdSpeakers.svg';
---
<section id="Speakers" class="relative px-4 pb-10 md:mt-[-40px] md:pb-16 bg-iwd-secondary min-h-screen">
  
  <!-- Fondo SVG -->
  <div 
    class="hidden md:block absolute inset-0 w-full h-full"
    style={`background-image: url(${IwdSpeakersBg.src}); background-size: contain; background-position: center top; background-repeat: no-repeat;`}
  ></div>

  <!-- Contenido -->
  <h2 class="relative text-4xl font-bold text-black text-center">
    Conoce a nuestras <strong class="text-iwd-text">Speakers</strong>
  </h2>

  <div class="relative mt-8 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 max-w-5xl mx-9 md:mx-auto">
    {speakers.map((speaker) => (
      <div 
        class="w-full bg-white rounded-3xl overflow-hidden shadow-md flex flex-col transition-shadow duration-300 hover:shadow-xl"
      >
        <!-- Imagen -->
        <div class="relative w-full aspect-[4/3] bg-[#d9d9d9]">
          <img
            src={speaker.foto}
            alt={speaker.nombre}
            class="absolute inset-0 w-full h-full object-cover"
          />
        </div>

        <!-- Contenido -->
        <div class="flex flex-col gap-4 p-4 md:p-6 lg:p-8 flex-1">
          <div>
            <h3 class="text-xl lg:text-2xl font-bold text-iwd-accent leading-tight">
              {speaker.nombre}
            </h3>
            <p class="flex items-center gap-2 text-sm md:text-base font-medium text-iwd-primary tracking-wide">
              <img src={BoliviaFlagIcon.src} alt="Bolivia Flag" class="w-5 h-5 md:w-6 md:h-6" />
              {speaker.ciudad} - Bolivia
            </p>
          </div>

          <p class="text-xl font-medium text-iwd-primary tracking-wide">
            {speaker.charla}
          </p>

          <!-- Redes sociales -->
          <div class="flex gap-4 mt-auto pt-4 justify-center">
            {speaker.instagram && (
              <a
                href={speaker.instagram}
                target="_blank"
                rel="noopener noreferrer"
                class="hover:opacity-75 transition-opacity"
              >
                <img src={InstagramIcon.src} alt="Instagram" class="w-6 h-6" />
              </a>
            )}
            {speaker.linkedin && (
              <a
                href={speaker.linkedin}
                target="_blank"
                rel="noopener noreferrer"
                class="hover:opacity-75 transition-opacity"
              >
                <img src={LinkedInIcon.src} alt="LinkedIn" class="w-6 h-6" />
              </a>
            )}
            {speaker.tiktok && (
              <a
                href={speaker.tiktok}
                target="_blank"
                rel="noopener noreferrer"
                class="hover:opacity-75 transition-opacity"
              >
                <img src={TikTokIcon.src} alt="TikTok" class="w-6 h-6" />
              </a>
            )}
          </div>
        </div>
      </div>
    ))}
  </div>
</section>
