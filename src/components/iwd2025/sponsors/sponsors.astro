---
import sponsors from './sponsors.json';
---

<section id="sponsors" class="pt-12 px-4 pb-10 md:mt-[-40px] md:pb-16 bg-iwd-primary">
  
  <!-- Contenido -->
  <h2 class="text-4xl font-bold text-white text-center mt-5">
    Nuestros <strong class="text-iwd-secondary">Sponsors</strong>
  </h2>

  <div class="relative mt-8 grid grid-cols-1 md:grid-cols-2 gap-6 max-w-3xl mx-9 md:mx-auto">
    {sponsors.map((sponsor) => (
      <a 
        href={sponsor.link} 
        target="_blank" 
        rel="noopener noreferrer"
        class="w-full bg-white rounded-3xl overflow-hidden shadow-md flex flex-col transition-transform duration-300 hover:scale-105"
      >
        <!-- Imagen -->
        <div class="relative w-full  flex items-center justify-center bg-iwd-secondary">
          <img
            src={sponsor.foto}
            alt={sponsor.nombre}
            class="max-w-full h-56 object-contain"
          />
        </div>
      </a>
    ))}
  </div>
</section>
