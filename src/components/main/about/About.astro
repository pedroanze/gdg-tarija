---
import info_about from "./info_about.json";
import Slide from "./Slide.astro";
import ButtonsNavigate from "./ButtonsNavigate.astro";
import { ChevronLeft, ChevronRight } from "lucide-astro";
---

<!-- About Section -->
<div class="w-full bg-neutral-800 text-zinc-100 py-16 animate-fade-up animate-duration-[1500ms] animate-ease-in animate-fill-forwards">
  <div id="default-carousel" class="relative flex flex-col items-center" data-carousel="static">
    <!-- Carousel wrapper -->
    <div class="overflow-hidden w-full md:w-9/12 relative h-96 rounded-xl sm:h-64 lg:h-48 mx-6 shadow-2xl">
      <!-- Slider items -->
      {info_about.map((info) => <Slide {...info} />)}
      
      <!-- Slider indicators -->
      <div class="flex absolute bottom-4 left-1/2 z-30 space-x-2 -translate-x-1/2">
        {info_about.map((info) => <ButtonsNavigate {...info} />)}
      </div>
      
      <!-- Slider controls -->
      <button
        type="button"
        class="absolute top-1/2 left-4 z-30 -translate-y-1/2 w-10 h-10 bg-black/20 backdrop-blur-sm hover:bg-black/40 rounded-full flex items-center justify-center cursor-pointer group focus:outline-none transition-colors duration-200"
        data-carousel-prev
      >
        <ChevronLeft class="w-5 h-5 text-white/80 group-hover:text-white" />
      </button>
      <button
        type="button"
        class="absolute top-1/2 right-4 z-30 -translate-y-1/2 w-10 h-10 bg-black/20 backdrop-blur-sm hover:bg-black/40 rounded-full flex items-center justify-center cursor-pointer group focus:outline-none transition-colors duration-200"
        data-carousel-next
      >
        <ChevronRight class="w-5 h-5 text-white/80 group-hover:text-white" />
      </button>
    </div>
  </div>
</div>
