---
import { Linkedin, Github, Facebook, Instagram, Globe } from "lucide-astro";

const { Linkedin: linkedinUrl, Github: githubUrl, Facebook: facebookUrl, Instagram: instagramUrl, Sitio_web } = Astro.props;
---

<div class="flex flex-wrap gap-3 mt-4 justify-center">
  {
    linkedinUrl && linkedinUrl !== "" && (
      <a 
        href={linkedinUrl} 
        class="p-2 rounded-lg bg-white/20 text-white hover:bg-blue-600 hover:scale-110 transition-all duration-300 hover:shadow-lg backdrop-blur-sm"
        aria-label="LinkedIn"
      >
        <Linkedin class="h-5 w-5" />
      </a>
    )
  }
  {
    Sitio_web && Sitio_web !== "" && (
      <a 
        href={Sitio_web} 
        class="p-2 rounded-lg bg-white/20 text-white hover:bg-green-600 hover:scale-110 transition-all duration-300 hover:shadow-lg backdrop-blur-sm"
        aria-label="Sitio Web"
      >
        <Globe class="h-5 w-5" />
      </a>
    )
  }
  {
    githubUrl && githubUrl !== "" && (
      <a 
        href={githubUrl} 
        class="p-2 rounded-lg bg-white/20 text-white hover:bg-gray-800 hover:scale-110 transition-all duration-300 hover:shadow-lg backdrop-blur-sm"
        aria-label="GitHub"
      >
        <Github class="h-5 w-5" />
      </a>
    )
  }
  {
    instagramUrl && instagramUrl !== "" && (
      <a 
        href={instagramUrl} 
        class="p-2 rounded-lg bg-white/20 text-white hover:bg-gradient-to-r hover:from-purple-500 hover:to-pink-500 hover:scale-110 transition-all duration-300 hover:shadow-lg backdrop-blur-sm"
        aria-label="Instagram"
      >
        <Instagram class="h-5 w-5" />
      </a>
    )
  }
  {
    facebookUrl !== "" && (
      <a 
        href={facebookUrl} 
        class="p-2 rounded-lg bg-white/20 text-white hover:bg-blue-700 hover:scale-110 transition-all duration-300 hover:shadow-lg backdrop-blur-sm"
        aria-label="Facebook"
      >
        <Facebook class="h-5 w-5" />
      </a>
    )
  }
</div>
