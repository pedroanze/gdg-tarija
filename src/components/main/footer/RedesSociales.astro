---
import { Facebook, Instagram, Linkedin, Youtube } from "lucide-astro";
const { red_social, url, logo } = Astro.props;

const iconos = {
  facebook: Facebook,
  instagram: Instagram,
  linkedin: Linkedin,
  youtube: Youtube,
};

const coloresHover = {
  facebook: "hover:bg-blue-600 hover:text-white",
  instagram: "hover:bg-gradient-to-r hover:from-purple-500 hover:to-pink-500 hover:text-white",
  linkedin: "hover:bg-blue-700 hover:text-white",
  youtube: "hover:bg-red-600 hover:text-white",
};

const IconComponent = iconos[logo];
const colorHover = coloresHover[logo];
---

<a 
  href={url} 
  class={`mx-3 p-3 rounded-full bg-gray-100 text-gray-600 transition-all duration-300 hover:scale-110 hover:shadow-lg ${colorHover}`}
  aria-label={red_social}
>
  <IconComponent size={24} />
</a>
