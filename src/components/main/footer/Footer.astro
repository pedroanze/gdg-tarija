---
import { Image } from "astro:assets";

import redes_sociales from "./redes_sociales.json";
import RedesSociales from "./RedesSociales.astro";

import ImgGDG from "../../../assets/svg/LOGO-GDG-TARIJA.svg";
---

<footer class="bg-gradient-to-r from-gray-50 to-gray-100 border-t border-gray-200">
  <div class="container mx-auto px-6 py-6">
    <div class="flex flex-col items-center space-y-6 lg:flex-row lg:justify-between lg:items-center lg:space-y-0">
      <!-- Logo y texto -->
      <div class="flex flex-col items-center lg:items-start space-y-2">
        <Image 
          class="h-8 sm:h-10 w-auto transition-transform duration-300 hover:scale-105" 
          src={ImgGDG} 
          alt="GDG Tarija Logo" 
        />

      </div>

      <!-- Redes sociales -->
      <div class="flex flex-col items-center space-y-4">
        <h3 class="text-gray-700 font-medium text-sm uppercase tracking-wide">
          Síguenos
        </h3>
        <div class="flex space-x-2">
          {redes_sociales.map((red_social) => <RedesSociales {...red_social} />)}
        </div>
      </div>
    </div>

    <!-- Copyright -->
    <div class="mt-8 pt-6 border-t border-gray-200">
      <p class="text-center text-gray-500 text-sm">
        © {new Date().getFullYear()} GDG Tarija. Todos los derechos reservados.
      </p>
    </div>
  </div>
</footer>
